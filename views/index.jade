extends layout

block content
    h1 Restful Express App
    p Welcome to my restful Express app

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2#userInfoHeader User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        #userList
            h2 User List
            table
                thead
                    th UserName
                    th Email
                    th Update
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        #addUser
            h2#addUserHeader Add User
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button(id='btnUserAction', data-action='add') Add User
                button#btnCancelUpdate.hidden Cancel
        // /ADD USER
    // /WRAPPER


